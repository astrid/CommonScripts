<ivysettings>
    <settings defaultResolver="chain"/>
    <resolvers>
        <!-- These properties are defined in script/ivy-targets.xml -->
        <chain name="chain" returnFirst="true" >
            <ibiblio name="local_repo" m2compatible="true"
                     root="${ivy.local.default.root}"/>

            <!-- TODO what to do with shared repo?
            <ibiblio name="shared_repo" m2compatible="true"
                     root="${ivy.shared.default.root}"/>
            -->

            <ibiblio name="public_repo" m2compatible="true"
                     root="${ivy.public.default.root}"/>
        </chain>
    </resolvers>
</ivysettings>
