<?xml version="1.0"?>
<project xmlns:ivy="antlib:org.apache.ivy.ant" name="util" basedir=".">

    <macrodef name="check-prop">
        <attribute name="propname"/>
        <sequential>
            <fail unless="@{propname}"
                  message="Property @{propname} must be set."/>
        </sequential>
    </macrodef>

</project>